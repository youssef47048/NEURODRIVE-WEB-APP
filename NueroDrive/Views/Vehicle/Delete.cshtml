@model NueroDrive.Models.Vehicle

@{
    ViewData["Title"] = "Delete Vehicle";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h2 class="text-center">@ViewData["Title"]</h2>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <h4><i class="bi bi-exclamation-triangle-fill"></i> Warning</h4>
                    <p>Are you sure you want to delete this vehicle? This will also delete all authorized drivers associated with this vehicle.</p>
                    <p>This action cannot be undone.</p>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Vehicle Details</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-3">Car ID</dt>
                            <dd class="col-sm-9">@Model.CarId</dd>
                            
                            <dt class="col-sm-3">Name</dt>
                            <dd class="col-sm-9">@Model.Name</dd>
                            
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <dt class="col-sm-3">Description</dt>
                                <dd class="col-sm-9">@Model.Description</dd>
                            }
                        </dl>
                    </div>
                </div>
                
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-outline-secondary me-md-2">Cancel</a>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 