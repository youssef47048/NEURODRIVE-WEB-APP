@model System.Exception

@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-body text-center">
                    <h1 class="text-danger mb-4">Error</h1>
                    <h2 class="mb-3">An error occurred while processing your request.</h2>
                    
                    @if (Model != null)
                    {
                        <p class="text-muted">
                            <strong>Error:</strong> @Model.Message
                        </p>
                    }
                    
                    <div class="mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Return to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 